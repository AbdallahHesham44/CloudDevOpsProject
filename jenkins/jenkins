@Library('my-shared-library-2') _
pipeline {
    agent any

    tools {
        gradle 'Gradle' // Ensure this matches your Jenkins setup
    }

    environment {
        DOCKER_IMAGE = 'docker.io/abdallah1312/ivolve-app:latest'
        kubeconfigPath = '/home/abdallah/.kube/config'
        deploymentYaml = 'Kubernetes/deployment.yaml'
    }

    stages {
        stage('Checkout') {
            steps {
                checkoutCode()
            }
        }
        stage('Set Permissions') {
            steps {
                setPermissions(dir: 'App') // Example parameter
            }
        }
        stage('Build') {
            steps {
                build(dir: 'App') // Example parameter
            }
        }
        stage('SonarQube Analysis') {
            steps {
                sonarQubeAnalysis(dir: 'App') // Example parameter
            }
        }
        stage('Docker Login') {
            steps {
                dockerLogin(credentialsId: 'docker-cred') // Example parameter
            }
        }
        stage('Docker Build') {
            steps {
                dockerBuild(image: DOCKER_IMAGE) // Example parameter
            }
        }
        stage('Docker Push') {
            steps {
                dockerPush(image: DOCKER_IMAGE) // Example parameter
            }
        }
        stage('Set up Kubernetes (Kind)') {
            steps {
                setupKubernetes(clusterName: 'my-cluster') // Example parameter
            }
        }
        stage('Deploy to Kind') {
            steps {
                deployToKind(config: kubeconfigPath, yaml: deploymentYaml) // Example parameters
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed.'
        }
    }
}
