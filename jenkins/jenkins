pipeline {
    agent any

    tools {
        // Make sure the name matches the Gradle installation in Jenkins
        gradle 'Gradle 8.12' // Use the correct Gradle name configured in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the repository
                git branch: 'main', url: 'https://github.com/Ibrahim-Adell/FinalProjectCode.git'
            }
        }

        stage('Set Permissions') {
            steps {
                // Ensure the gradlew script has execute permissions
                sh 'chmod +x ./gradlew'
            }
        }

        stage('Build') {
            steps {
                // Build the project using Gradle wrapper
                sh './gradlew clean build'
            }
        }

        stage('Test') {
            steps {
                // Run tests
                sh './gradlew test'
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                // Run deploy command
                sh './gradlew deploy'
            }
        }
    }

    post {
        always {
            // Clean up workspace
            cleanWs()
        }
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed.'
        }
    }
}
